<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernate?createDatabaseIfNotExist=true</property>
        <property name="connection.username">root</property>
        <property name="connection.password">NejakeHeslo</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>


        <!--        # logs the SQL statements-->
        <property name="org.hibernate.SQL">debug</property>
        <!--        # Logs the JDBC parameters passed to a query-->
        <property name="org.hibernate.type">trace</property>
        <property name=" org.hibernate.tool.hbm2ddl">none</property>


    </session-factory>
</hibernate-configuration>
